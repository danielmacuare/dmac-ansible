# {{ ansible_managed }}


# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Set name of the theme to load --- if set to "random", it will
# load a random theme each time oh-my-zsh is loaded, in which case,
# to know which specific one was loaded, run: echo $RANDOM_THEME
# See https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
ZSH_THEME="powerlevel10k/powerlevel10k"


# Powerlever10K
# Powerlever10K Instant Prompt
# https://github.com/romkatv/powerlevel10k#how-do-i-configure-instant-prompt
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

typeset -g POWERLEVEL9K_INSTANT_PROMPT=quiet

# Update automatically without asking
zstyle ':omz:update' mode auto

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# Plugins to load
plugins=(
    zsh-autosuggestions
    fast-syntax-highlighting
    fzf-tab
    zsh-completions
)

# Add zsh-completions to fpath
fpath+=${ZSH_CUSTOM:-${ZSH:-~/.oh-my-zsh}/custom}/plugins/zsh-completions/src

# Source Oh My Zsh (loads theme and plugins)
source "$ZSH/oh-my-zsh.sh"

# FZF key bindings and completion (if available)
[ -f /usr/share/doc/fzf/examples/key-bindings.zsh ] && source /usr/share/doc/fzf/examples/key-bindings.zsh
[ -f /usr/share/doc/fzf/examples/completion.zsh ] && source /usr/share/doc/fzf/examples/completion.zsh

# Custom aliases
[ -f "$HOME/.aliases" ] && source "$HOME/.aliases"

# Custom functions
[ -f "$HOME/.custom_functions" ] && source "$HOME/.custom_functions"

# ZSH Autosuggestions
typeset -g ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=248'
bindkey '`' autosuggest-execute
bindkey '\el' autosuggest-accept
bindkey '\eh' forward-word


# Custom Exports
export EDITOR="/usr/bin/vim"
## FZF with BATCAT Preview for files (To be Fixed)
export FZF_DEFAULT_OPTS="--multi --preview-window 'right:60%' --preview 'batcat --color=always --style=header,grid --line-range :300 {}'"
export FZF_COMPLETION_TRIGGER='LL'
# Add snap to PATH if it exists
[ -d /snap/bin ] && export PATH="/snap/bin:$PATH"